        Historial h = new Historial();
        ArrayList<String> repuesto = new ArrayList<>();
        
         while(true) {
             
        System.out.println("*********************************");
        System.out.println("BIENVENIDO A TU PLAYLIST FAVORITA");
        System.out.println("*********************************");
